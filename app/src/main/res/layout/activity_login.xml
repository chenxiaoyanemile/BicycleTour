<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.bicycle.view.loginActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_running"
        android:id="@+id/iv_logo"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/bt_login"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号:"
        android:textSize="30sp"
        android:id="@+id/tv_account"
        android:layout_toStartOf="@+id/et_password"
        android:layout_alignTop="@+id/et_password"
        android:layout_toLeftOf="@+id/et_password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="30sp"
        android:id="@+id/tv_password"
        android:layout_toStartOf="@+id/et_account"
        android:layout_alignBottom="@+id/et_account"
        android:layout_toLeftOf="@+id/et_account"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="6位数字或字母"
        android:ems="10"
        android:id="@+id/et_account"
        android:layout_below="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="6位数字或字母"
        android:ems="10"
        android:id="@+id/et_password"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/iv_logo"
        android:layout_alignStart="@+id/iv_logo"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remember_Pass"
        android:checked="false"
        android:layout_below="@+id/tv_password"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/tv_password"
        android:layout_toRightOf="@+id/tv_password"
        android:layout_toEndOf="@+id/tv_password"
        android:layout_alignRight="@+id/et_account"
        android:layout_alignEnd="@+id/et_account"/>

</RelativeLayout>
