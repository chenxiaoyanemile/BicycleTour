<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.bicycle.view.NewBicycle">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单车行新款上市"
        android:textColor="#ffffff"
        android:textColorHint="#000000"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:id="@+id/tv_new_bicycle"
        android:background="#BBDE5B"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/textView"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/tv_new_bicycle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rent"
        android:background="@drawable/d_bg"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_buy"
        android:layout_toStartOf="@+id/btn_buy"
        android:layout_alignBottom="@+id/btn_sell"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="永久27速山地自行车"
        android:textColor="#ffffff"
        android:id="@+id/btn_buy"
        android:background="#BBDE5B"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btn_rent5"
        android:layout_alignStart="@+id/btn_rent5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="十成新 rmb:100"
        android:textColor="#ffffff"
        android:id="@+id/btn_sell"
        android:background="#BBDE5B"
        android:layout_below="@+id/btn_buy"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/btn_buy"
        android:layout_alignStart="@+id/btn_buy"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="自行车新款新闻头条"
        android:textColorHint="#E84D3F"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:layout_above="@+id/btn_rent"
        android:layout_centerHorizontal="true"/>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/textView3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="折叠自行车 十成新 rmb:100"
        android:textColor="#ffffffff"
        android:background="#BBDE5B"
        android:id="@+id/btn_rent5"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_above="@+id/textView5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:background="@drawable/electriccar4_bg"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="索罗门D603电动车 十成新 rmb:100"
        android:id="@+id/button8"
        android:textColor="#ffffffff"
        android:background="#BBDE5B"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_toRightOf="@+id/imageView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/right1_bg"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
