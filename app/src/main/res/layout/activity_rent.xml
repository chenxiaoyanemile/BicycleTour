<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.bicycle.view.RentActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:id="@+id/btn_RentBack"
        android:background="#ff99cc00"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ibtn_rent"
        android:layout_toStartOf="@+id/ibtn_rent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_rent"
        android:src="@drawable/rent_bg"
        android:background="#ff99cc00"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/btn_RentBack"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:src="@drawable/h_bg"
        android:layout_marginTop="36dp"
        android:layout_toStartOf="@+id/ibtn_rent"
        android:layout_below="@+id/btn_RentBack"
        android:layout_toLeftOf="@+id/ibtn_rent"
        android:layout_above="@+id/imageView3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="漂亮自行车    租金：2元每小时 "
        android:id="@+id/btn_rentbike"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/imageView3"
        android:background="#ff99cc00"
        android:textColor="#ffffffff"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView3"
        android:src="@drawable/c_bg"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_rentbike"
        android:layout_toStartOf="@+id/btn_rentbike"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双人自行车  租金:5元每小时"
        android:id="@+id/btn_rentbike2"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_alignRight="@+id/btn_rentbike"
        android:layout_alignEnd="@+id/btn_rentbike"
        android:background="#ff99cc00"
        android:textColor="#ffffffff"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView4"
        android:src="@drawable/e_bg"
        android:layout_below="@+id/imageView3"
        android:layout_toLeftOf="@+id/btn_rentbike2"
        android:layout_toStartOf="@+id/btn_rentbike2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="儿童自行车  租金:1元每小时"
        android:id="@+id/btn_rentbike3"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_alignRight="@+id/btn_rentbike2"
        android:layout_alignEnd="@+id/btn_rentbike2"
        android:background="#ff99cc00"
        android:textColor="#ffffffff"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView5"
        android:src="@drawable/s_bg"
        android:layout_below="@+id/imageView4"
        android:layout_toStartOf="@+id/btn_rentbike3"
        android:layout_toLeftOf="@+id/btn_rentbike3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="炫酷自行车   租金:5元每小时"
        android:id="@+id/btn_rentbike4"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_alignRight="@+id/btn_rentbike3"
        android:layout_alignEnd="@+id/btn_rentbike3"
        android:background="#ff99cc00"
        android:textColor="#ffffffff"/>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:background="#ffffffff"
        android:layout_above="@+id/btn_rentbike"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:id="@+id/btn_rentlogin"
        android:layout_toEndOf="@+id/ibtn_rent"
        android:layout_alignRight="@+id/searchView"
        android:layout_alignEnd="@+id/searchView"
        android:layout_toRightOf="@+id/ibtn_rent"
        android:layout_alignBottom="@+id/ibtn_rent"
        android:background="#ff99cc00"/>

</RelativeLayout>
